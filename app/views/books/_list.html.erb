<!--User info部分-->
<h2>User info</h2>
<% if @user.image.attached? %>
  <%= image_tag @user.image, size: "200*200" %>
<% else %>
  <%= image_tag 'default-image', size: "200*200" %>
<% end %>

<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>

<%= link_to "編集", edit_user_path(@user.id) %>

<h2>New Book</h2>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>