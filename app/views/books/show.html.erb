<%= render 'list', user: @user, book: @book %>

<!--右側投稿内容部分-->
<h2>Book detail</h2>
<table>
    <tr>
        <td>
            <%= link_to users_path(@booker.user.id) do %>
                <%= image_tag @booker.user.get_profile_image %><br>
                <%= @booker.user.name %>
            <% end %>
        </td>
        <td>
            <%= @booker.title %>
        </td>
        <td>
            <%= @booker.body %>
        </td>
    <% if @booker.user == current_user %>
        <td>
            <%= link_to "Edit", edit_book_path(@booker) %>
        </td>
        <td>
            <%= link_to "Destroy", book_path(@booker), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
    <% end %>
    </tr>
</table>