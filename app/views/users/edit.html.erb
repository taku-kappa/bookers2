<div class="container">
<h2>User info</h2>
<!--エラーメッセージ-->
<% if @user.errors.any? %>
  <div class="container mt-3">
    <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  <div>
    <label>Name</label><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <label>Image</label><br>
    <%=f.file_field :profile_image, placeholder: "ファイルを選択" %>
  </div>

  <div>
    <label>Introduction</label><br>
    <%= f.text_area :introduction %>
  </div>

  <div>
    <%= f.submit "Update User" %>
  </div>
<% end %>
</div>