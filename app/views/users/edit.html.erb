<h2>User info</h2>
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  <div>
    <label>Name</label><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <label>Image</label><br>
    <%=f.file_field :image, placeholder: "ファイルを選択" %>
  </div>

  <div>
    <label>Introduction</label><br>
    <%= f.text_area :introduction %>
  </div>

  <div>
    <%= f.submit "Update" %>
  </div>
<% end %>