<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user, book: @book %>
    </div>

<!--右側のUsers部分-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th>image</th>
          <th>mane</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag user.get_profile_image, :size => '80x80' %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to "Show", user_path(user.id) %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
